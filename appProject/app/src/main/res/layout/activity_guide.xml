<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_banner_height"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_banner_title_height"
        android:layout_below="@+id/guide_viewpager">
        <ImageView
            android:id="@+id/iv_image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/image_icon"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/list_margin_left_and_right"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/tv_banner_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/list_content_text_size"
            android:textColor="#000"
            />
        <LinearLayout
            android:id="@+id/guide_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/list_margin_left_and_right"/>
    </LinearLayout>

